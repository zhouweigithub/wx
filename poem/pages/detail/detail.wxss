/* pages/detail/detail.wxss */

view {
  font-size: 18px;
}

.container {
  padding: 20px;
  width: 100%;
  box-sizing: border-box;
}

.container .title {
  padding: 20px 0;
  text-align: center;
  font-size: 22px;
  line-height: 28px;
  display: block;
  border-bottom: dotted 1px green;
  width: 100%;
}

.container .content {
  margin: 20px 10px;
  text-align: justify;
  line-height: 26px;
  display: block;
  text-indent: 2em;
  width: 100%;
}

.container .back {
  display: block;
  margin: 20px 10px;
  font-size: 14px;
  width: 100%;
}
